<div class="container">
  <div class="card">
    <div class="container">
      <div class="list-group">
          <h1>Matters</h1>
          <table class="table">
            <tr>
              <th>
                ID
              </th>
              <th>
                Cause Number
              </th>
              <th>
                Client
              </th>
              <th>
                Paralegal
              </th>
              <th>
                Attorney
              </th>
              <th>
                Type
              </th>
              <th>
                Status
              </th>
              <th>
                Opposing Counsel
              </th>
              <th>
                Opposing Party
              </th>
              <th>
                Link
              </th>
            </tr>
            <% @matters.each do |matter| %>
            <td>
              <%= matter.id%>
            </td>
            <td>
              <%= matter.cause_number%>
            </td>
            <td>
              <%= matter.client%>
            </td>
            <td>
              <%= matter.paralegal%>
            </td>
            <td>
              <%= matter.attorney%>
            </td>
            <td>
              <%= matter.kind%>
            </td>
            <td>
              <%= matter.status%>
            </td>
            <td>
              <%= matter.opposing_counsel%>
            </td>
            <td>
              <%= matter.opposing_party%>
            </td>
            <td>
              <%= link_to "See Detail", matter_path(id: matter.id) %>
            </td>
          </tr>
            <%end%>
          </table>
      </div>
    </div>
  </div>
</div>
