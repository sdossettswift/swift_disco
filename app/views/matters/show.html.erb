<div class="wrapper">
  <div class="row">
      <div class="col-xs-6 col-md-4">
        <div class="card">
          <h1><%= @matters.cause_number%></h1>

          <table class="table">
              <%= render 'user_role_row', user: @client.first, field_name: 'Client' %>
              <%= render 'user_role_row', user: @attorney.first, field_name: 'Attorney' %>
              <%= render 'user_role_row', user: @paralegal.first, field_name: 'Paralegal' %>

              <tr>
                <th>
                  Case Type
                </th>
                <td>
                  <%= @matters.kind%>
                </td>
              </tr>
              <tr>
                <th>
                  Case Status
                </th>
                <td>
                  <%= @matters.status%>
                </td>
              </tr>
              <tr>
                <th>
                  Opposing Party
                </th>
                <td>
                  <%= @matters.opposing_party%>
                </td>
              </tr>
              <tr>
                <th>
                  Opposing Counsel
                </th>
                <td>
                  <%= @matters.opposing_counsel%>
                </td>
              </tr>
              <tr>
                <th>
                  Judge
                </th>
                <td>
                  <%= @matters.judge%>
                </td>
              </tr>
          </table>


              <%= link_to "Update Matter", edit_matter_path%>
          </div>
        </div>

    <div class="col-xs-12 col-sm-6 col-md-8">
        <div class="card">
            <table class="table">
              <thead>
                <tr>
                  <th>Document ID</th>
                  <th>Description</th>
                  <th>Category</th>
                  <th>Status</th>
                  <th>Year</th>
                  <th>Link</th>
                </tr>
              </thead>
              <tbody>
                <% @documents.each do |document|%>
                  <tr>
                    <td><%=document.id%> </td>
                    <td><%=document.description%></td>
                    <td><%=document.category%></td>
                    <td><%=document.status%></td>
                    <td><%=document.year%></td>
                    <td><%= link_to "Detail", document_path(id: document.id) %></td>
                  </tr>
                <%end%>
                </tr>
              </tbody>
            </table>
            <div class="users">
              <table class="table">
                <thead>
                  <tr>
                    <th>User ID</th>
                    <th>Full Name</th>
                    <th>Role</th>
                    <th>Link</th>

                  </tr>
                </thead>
                <tbody>
                  <% @users.each do |user|%>
                    <tr>
                      <td><%=user.id%> </td>
                      <td><%=user.full_name%></td>
                      <td><%=user.role%></td>
                      <td><%= link_to "Detail", user_path(id: user.id) %></td>
                    </tr>
                  <%end%>
                  </tr>
                </tbody>
              </table>

            </div>
            <table = "table">
              <h1>Events</h1>
              <table class="table">
                <thead>
                  <tr>
                    <th>Event ID</th>
                    <th>Matter Id</th>
                    <th>Year</th>
                    <th>Month</th>
                    <th>Headline</th>
                    <th>Caption</th>
                    <th>URL</th>
                    <th>Detail</th>
                  </tr>
                </thead>
                <tbody>
                  <% @events.each do |event|%>
                    <tr>
                      <td><%=event.id%> </td>
                      <td><%=event.matter_id%></td>
                      <td><%=event.year%></td>
                      <td><%=event.month%></td>
                      <td><%=event.headline%></td>
                      <td><%=event.caption%> </td>
                      <td><%=event.url%></td>
                      <td><%= link_to "See Detail", event_path(id: event.id) %></td>
                    </tr>
                  <%end%>
                  </tr>
                </tbody>
              </table>


            </table>


          </div>
        </div>
