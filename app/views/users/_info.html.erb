<% if @user.errors.any? %>
  <% @user.errors.full_messages.each do |error| %>
    <p class="alert alert-danger"><strong><%= error %></strong></p>
  <% end %>
<% end %>

<%= form_for @user do |f| %>
  <%= render partial: 'short_info' %>
  <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <%= f.label :first_name %>
          <%= f.text_field :first_name, class: "form-control" %>
        </div>
      </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :middle_name %>
        <%= f.text_field :middle_name, class: "form-control" %>
      </div>
    </div>
  </div>
  <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <%= f.label :last_name %>
          <%= f.text_field :last_name, class: "form-control" %>
        </div>
      </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :maiden_name %>
        <%= f.text_field :maiden_name, class: "form-control" %>
      </div>
    </div>
  </div>


  <div class="form-group">
    <%= f.label :birthdate %>
    <%= f.date_field:dob%>
  </div>



  <div class="form-group">
    <%= f.submit class: "btn btn-primary" %>
    or
    <%= link_to "Sign In", sign_in_path %>
  </div>
<% end %>
