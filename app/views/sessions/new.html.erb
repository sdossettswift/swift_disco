<div class="container">
  <div class="well">
    <h1>Sign In</h1>

  <%= form_tag do %>
    <div class="form-group">
      <%= label_tag :username %>
      <%= text_field_tag :username, params[:username], class: "form-control" %>
    </div>
    <div class="form-group">
      <%= label_tag :password %>
      <%= password_field_tag :password, "", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= submit_tag "Sign In", class: "btn btn-lg btn-primary"%>
      or
      <%= link_to 'Sign Up', new_user_path %>
    </div>
  <% end %>
  </div>
</div>
