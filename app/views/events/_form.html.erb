<% if @event.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <% @event.errors.full_messages.each do |msg| %>
      <%= msg %><br>
    <% end %>
  </div>
<% end %>

<div class="well">

<%= form_for @event do |f| %>
  <div class="form-group">
    <%= f.label :headline %>
    <%= f.text_field :headline, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :text %>
    <%= f.text_field :text, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :year %>
    <%= f.text_field :year, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :month %>
    <%= f.text_field :month, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :day %>
    <%= f.text_field :day, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :hour %>
    <%= f.text_field :hour, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :minute %>
    <%= f.text_field :minute, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :caption %>
    <%= f.text_field :caption, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :url %>
    <%= f.text_field :url, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :thumbnail %>
    <%= f.text_field :thumbnail, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :credit %>
    <%= f.text_field :credit, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit class: "btn btn-lg btn-primary"%>
  </div>
<% end %>
</div>
