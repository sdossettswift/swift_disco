<div class="container">
  <div class="well">
    <h1>Please Fill Out The Following Form</h1>
    <%= form_for @profile do |f| %>
      <div class="form-group">
        <%= f.label :first_name %>
        <%= f.text_field :first_name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :middle_name %>
        <%= f.text_field :middle_name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :last_name %>
        <%= f.text_field :last_name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :maiden_name %>
        <%= f.text_field :maiden_name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :Birthdate %>
        <%= f.date_select :dob, :start_year=>Date.current.year, :end_year=> 1900, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :gender %>
        <%= f.text_field :gender, class: "form-control" %>
      </div>


      <div class="form-group">
        <%= f.submit class: "btn btn-primary" %>
        or
        <%= link_to "Sign In", sign_in_path %>
      </div>
    <% end %>

  </div>
</div>
